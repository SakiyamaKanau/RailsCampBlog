<div id="title">
    <div>
        <p><%= @article.created_at.strftime('%Y/%m/%d') %> / 書いた人:<%= @article.user.email %></p>
        <h1><%= @article.title %></h1>
    </div>
</div>

<div id="article_wrap">

    <div id="content">
      <%= @article.content %>
    </div>


    <div id="sidebar">
                <h2>★PV数ランキング</h2>
                <ul>
                <% @ranking_articles.each_with_index do |ranking_article,index| %>
                  <%= index + 1 %>位
                  <%= link_to(ranking_article.title,"/articles/#{ranking_article.id}") %>
                  (<%= REDIS.zscore("articles/daily/#{Date.today.to_s}", ranking_article.id).to_i %>PV)
                <% end %>
                </ul>
            </div>
    <div class="clear"></div>
</div>